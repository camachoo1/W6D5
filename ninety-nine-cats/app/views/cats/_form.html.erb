<% if type == :new %>
  <% action_url = cats_url %>
  <% button_value = "Create Cat" %>
<% else %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Update Cat" %>
<% end %>
<form action="<%= action_url %>" method="POST">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label>Enter Cat Name:
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <br>
  <label>Enter Cat Birth Date:
    <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
  </label>
  <br>
  <label>Enter Cat Color:
    <select id="color" name="cat[color]" placeholder= <%= @cat.color %> >
      <option <%= "selected" if cat.color == CAT::CAT_COLORS[0]%> value="<%=CAT::CAT_COLORS[0]%>"> <%= CAT::CAT_COLORS[0] %> </option>
      <option <%= "selected" if cat.color == CAT::CAT_COLORS[1]%> value="<%=CAT::CAT_COLORS[1]%>"> <%= CAT::CAT_COLORS[1] %> </option>
      <option <%= "selected" if cat.color == CAT::CAT_COLORS[2]%> value="<%=CAT::CAT_COLORS[2]%>"> <%= CAT::CAT_COLORS[2] %> </option>
      <option <%= "selected" if cat.color == CAT::CAT_COLORS[3]%> value="<%=CAT::CAT_COLORS[3]%>"> <%= CAT::CAT_COLORS[3] %> </option>
    </select>
  </label>
  <br>
  <label>Enter Cat Sex:
    <select id="sex" name="cat[sex]" value= "<%= @cat.sex  %>">
      <option selected disabled value="">--Please Select Sex--</option>
      <option <%= "selected" if cat.sex == 'F' %> value="F" >F</option>
      <option <%= "selected" if cat.sex == 'M' %> value="M" >M</option>
    </select>
  </label>
  <br>
  <label>Enter Cat Description:
    <input type="text" name="cat[description]" value="<%= @cat.description %>">
  </label>
  <br>
  <input type="submit" value=<%= button_value %>>
</form>
